<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="350dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/club_green"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/add_user_game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="ADD GAME"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/club_green"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/dialog_new_game_name"
        android:layout_width="280dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/add_user_game_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Game name"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/dialog_cancel_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_new_game_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dialog_add_game_button"
        android:layout_marginTop="30dp"
        android:background="@drawable/go_back_circle"
        android:backgroundTint="@color/club_green"
        />

    <ImageButton
        android:id="@+id/dialog_add_game_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_new_game_name"
        app:layout_constraintStart_toEndOf="@id/dialog_cancel_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/add_item_button"
        android:backgroundTint="@color/club_green"
        />

</androidx.constraintlayout.widget.ConstraintLayout>